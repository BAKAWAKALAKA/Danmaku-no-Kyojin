<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

  <action label="top">
    <repeat>
      <times>1</times>
      <action>
        <fire>
          <direction>90</direction>
          <speed>5</speed>
          <bullet>
            <repeat>
              <times>1000</times>
              <action>
                <changeDirection>
                  <direction type="relative">90</direction>
                  <term>3</term>
                </changeDirection>
              </action>
            </repeat>
            <changeSpeed>
              <speed>200</speed>
              <term>600</term>
            </changeSpeed>
          </bullet>
        </fire>

      </action>
    </repeat>

    <wait>150</wait>
  </action>

</bulletml>